<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackboard"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/bag"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/maruti"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ci_bag" />

    <ImageView
        android:id="@+id/maruti"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ci_maruti" />

    <ImageView
        android:id="@+id/blshirt"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ci_blueshirt" />

    <ImageView
        android:id="@+id/cap"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
       
        android:src="@drawable/ci_cap" />

    <ImageView
        android:id="@+id/blue"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="260dp"
        android:src="@drawable/ci_blue_c" />

    
 
</RelativeLayout>