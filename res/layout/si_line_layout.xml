<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackboard"
    android:orientation="horizontal" >

<ImageView
    android:id="@+id/pt1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="220dp"
    android:src="@drawable/pt1" />

 <ImageView
    android:id="@+id/pt2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="222dp"
    android:src="@drawable/pt1" /> 

<ImageView
    android:id="@+id/line"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
	android:layout_centerHorizontal="true"
    android:src="@drawable/line2" />

 <ImageView
    android:id="@+id/fp1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/pt1"
   	android:layout_marginLeft="150dp"
     />

<ImageView
    android:id="@+id/fp2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/pt2"
    android:layout_marginRight="160dp"
    />

<ImageView
    android:id="@+id/fp3"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_centerHorizontal="true"
    android:layout_alignTop="@+id/line"
    />


<ImageView
    android:id="@+id/line1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/line"
    android:layout_alignParentTop="true"
    />

<ImageView
    android:id="@+id/line2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/fp1"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="32dp"
    
   />

<ImageView
    android:id="@+id/fp4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginLeft="200dp" />

</RelativeLayout>
