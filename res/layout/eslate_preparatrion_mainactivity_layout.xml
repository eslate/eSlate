<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/prepare_background">

    <Button
        android:id="@+id/report_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="right|top"
        android:background="@drawable/report" />

<Button
        android:id="@+id/prepare_btn"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-50dp"
        android:background="@drawable/prepare_btn"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:layout_gravity="left"
	android:layout_marginTop="-10dp"
    android:layout_marginLeft="10dp">
<Button
        android:id="@+id/color_btn"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="left"
        android:background="@drawable/color_btn"/>
<Button
        android:id="@+id/shape_btn"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_btn"/>
<Button
        android:id="@+id/bodyparts_btn"
       	android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:background="@drawable/bodyparts_btn"/>
</LinearLayout>
<LinearLayout
	    android:layout_width="match_parent"
     	android:layout_height="match_parent"
    	android:orientation="vertical" 
    	android:layout_gravity="right"
		android:layout_marginTop="-285dp"
		android:layout_marginLeft="400dp">
 <Button
        android:id="@+id/animal_btn"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:background="@drawable/animal_btn"/>
 <Button
        android:id="@+id/bird_btn"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bird_btn"/>
<Button
        android:id="@+id/slate_btn"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/slate_btn"/>

</LinearLayout>

</LinearLayout>