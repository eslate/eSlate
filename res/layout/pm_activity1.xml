<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/blackboard"
    android:orientation="vertical">
    
    <!--First Row  -->
 <LinearLayout  android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:id="@+id/linear1"
    android:layout_gravity="top"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="26dp">
    <ImageButton
        android:id="@+id/imageButton0"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_weight="0.00"
        android:background="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/pm_smiley1" />
    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_weight="0.00"
        android:background="@android:color/transparent"
        android:src="@drawable/pm_fan" />

    <ImageButton
        android:id="@+id/imageButton4"
         android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_weight="0.00"
        android:background="@android:color/transparent"
        android:src="@drawable/pm_umbrella" />
  
    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_weight="0.00"
        android:background="@android:color/transparent"
        android:src="@drawable/pm_home" />
    <ImageButton 
        android:id="@+id/imageButton5"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_weight="0.00"
        android:background="@android:color/transparent"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/pm_smiley1"/>
    </LinearLayout>
    
        <!--Second Row Images  -->
    <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="156dp"
         android:id="@+id/linear2"
         android:layout_gravity="center_vertical"
         android:layout_marginTop="-255dp" 
         android:layout_marginLeft="26dp">

    <ImageButton 
        android:id="@+id/imageButton6"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_weight="0.00"
        android:background="@android:color/white"
        android:src="@drawable/pm_airoplane1"/>
    
    <ImageButton 
        android:id="@+id/imageButton7"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_weight="0.00"
        android:background="@android:color/transparent"
        android:src="@drawable/pm_fan"/>
    <ImageButton 
        android:id="@+id/imageButton8"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_weight="0.00"
        android:background="@android:color/transparent"
        android:src="@drawable/pm_airoplane1"/>
    <ImageButton 
        android:id="@+id/imageButton9"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_weight="0.00"
        android:background="@android:color/transparent"
        android:src="@drawable/pm_airoplane2"/>
    <ImageButton 
        android:id="@+id/imageButton10"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_weight="0.00"
        android:background="@android:color/transparent"
        android:src="@drawable/pm_home"/>
    </LinearLayout>
    
    <!--Third Row  -->
    <LinearLayout  
         android:layout_width="wrap_content"
         android:layout_height="156dp"
         android:id="@+id/linear3"
         android:layout_gravity="bottom"
         android:layout_marginTop="-36dp"
         android:layout_marginLeft="26dp">
        <ImageButton 
         android:id="@+id/imageButton11"
         android:layout_width="150dp"
         android:layout_height="120dp"
         android:layout_weight="0.00"
         android:background="@android:color/white"
         android:src="@drawable/pm_fish"/>
        <ImageButton 
         android:id="@+id/imageButton12"
         android:layout_width="150dp"
         android:layout_height="120dp"
         android:layout_weight="0.00"
