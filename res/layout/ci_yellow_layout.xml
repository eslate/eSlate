<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackboard"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/sunflow"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/mango"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ci_sunflow" />

    <ImageView
        android:id="@+id/mango"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ci_mango" />

    <ImageView
        android:id="@+id/lemon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ci_lem" />

    <ImageView
        android:id="@+id/sun"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/bus"
        android:src="@drawable/ci_sun" />

    <ImageView
        android:id="@+id/yellow"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="260dp"
        android:src="@drawable/ci_yello_c" />

    
 
</RelativeLayout>